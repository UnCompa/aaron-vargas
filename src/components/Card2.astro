---
interface Props {
  title: string,
  text: string,
  img?: string
}
let {title,text,img} = Astro.props
---
<div class="w-full lg:h-60 h-96 border-2 border-black my-8 shadow-caja grid grid-rows-2 grid-cols-1 lg:grid-cols-2 lg:grid-rows-1">
  <div class="p-4 w-full">
    <h3 class="text-2xl">{title}</h3>
    <p>
      text
    </p>
  </div>
  <div class="w-full lg:h-60 bg-red-400">
    <img src={img}  class="h-full w-full object-cover" />
  </div>
</div>
